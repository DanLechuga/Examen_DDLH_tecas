@model Examen_DDLH_tecas.Models.ModeloReporte

@{
    ViewData["Title"] = "CrearActividad";
}

<h1>CrearActividad</h1>
@ViewData["Usuario"].ToString()
<br />
<h4>ModeloReporte</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AgregarActividad">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiaDeLaSemana" class="control-label"></label>
                <input asp-for="DiaDeLaSemana" class="form-control" />
                <span asp-validation-for="DiaDeLaSemana" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaIngresoActividad" class="control-label"></label>
                <input asp-for="FechaIngresoActividad" class="form-control" />
                <span asp-validation-for="FechaIngresoActividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control" />
                <span asp-validation-for="Concepto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Actividad" class="control-label"></label>
                <input asp-for="Actividad" class="form-control" />
                <span asp-validation-for="Actividad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label"></label>
                <input asp-for="HoraInicio" class="form-control" />
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFin" class="control-label"></label>
                <input asp-for="HoraFin" class="form-control" />
                <span asp-validation-for="HoraFin" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="nav-link text-dark" href="/ReporteSemanal/ConsultaReporte?nombreUsuario=@ViewData["Usuario"].ToString()">Consulta de Reporte Semanal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
